    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            card_view:cardCornerRadius="4dp" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">


            <TextView

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    tools:text="Destiny | DST"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:maxLines="1"
                    android:id="@+id/txt_keyword"/>

            <View
                    android:id="@+id/seperator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_main"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:orientation="horizontal">


                <ImageView
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:id="@+id/img_keyword"
                        />


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:maxLines="4"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        tools:text="This is some random text that is about the game that is about to be played and I love so so so so much. This is some random text that is about the game that is about to be played and I love so so so so much"
                        android:id="@+id/txt_description"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        />


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

