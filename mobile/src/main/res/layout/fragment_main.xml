<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context=".MainActivityFragment">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/list_keywords"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            />


    <EditText
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <com.ibm.watson.elementry.widget.RecordButton
            android:id="@+id/btn_rec_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:img_loading="@android:drawable/ic_media_play"
            app:img_recording="@android:drawable/ic_media_play"
            app:img_paused="@android:drawable/ic_media_pause"
            />



</RelativeLayout>
